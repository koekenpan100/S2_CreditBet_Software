@model CreditBet_S2_Software.Models.LoginUserModel


@{
    ViewData["Title"] = "LoginUser";
}

<div class="signInStyle">
    <form asp-action="LoginUser" asp-controller="User">
        <div>
            <form asp-action="LoginUser" class="form-signin">
                <div class="text-center mb-4">
                    <h1 class="h3 mb-3 font-weight-normal">CreditBet</h1>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-label-group">
                    <label asp-for="Email" class="control-label" for="inputEmail">Email</label>
                    <input asp-for="Email" type="email" class="form-control" id="inputEmail" placeholder="Email" required autofocus />
                    @*<span asp-validation-for="Email" class="text-danger"></span>*@
                </div>


                <div class="form-label-group">
                    <label asp-for="Password" class="control-label" for="inputPassword">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Password" required />
                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                </div>


                @Html.ValidationMessage("incorrectLogin")
                <div class="form-label-group">
                    <button type="submit" value="Login" class="btn btn-lg btn-primary btn-block">Inloggen</button>
                </div>
            </form>
        </div>

    </form>
</div>

